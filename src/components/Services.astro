---
const services = [
  {
    icon: 'home',
    title: 'Full Home Staging',
    description: 'Complete transformation of your entire property with our curated furniture collection and design expertise. Perfect for vacant properties.',
    features: ['Furniture rental', 'DÃ©cor accessories', 'Artwork placement', '30-60 day packages']
  },
  {
    icon: 'sparkle',
    title: 'Partial Staging',
    description: 'Strategic enhancement of key rooms to maximize impact. Ideal for occupied homes needing that extra polish to impress buyers.',
    features: ['Living areas', 'Master suite', 'Kitchen styling', 'Entry & dining']
  },
  {
    icon: 'eye',
    title: 'Consultation Only',
    description: 'Professional guidance and detailed recommendations you can implement yourself. Get expert advice without the full staging investment.',
    features: ['Room-by-room analysis', 'Furniture arrangement', 'Color recommendations', 'Written action plan']
  },
  {
    icon: 'camera',
    title: 'Listing Photography',
    description: 'Partner services with Calgary\'s top real estate photographers to capture your staged space in its best light.',
    features: ['HDR photography', 'Twilight shots', 'Aerial views', 'Virtual tours']
  }
];

const iconPaths = {
  home: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6',
  sparkle: 'M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z',
  eye: 'M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z',
  camera: 'M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z M15 13a3 3 0 11-6 0 3 3 0 016 0z'
